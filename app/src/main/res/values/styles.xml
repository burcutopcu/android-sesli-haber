<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AboutTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAboutPrimary</item>
        <item name="colorPrimaryDark">@color/colorAboutPrimaryDark</item>
        <item name="colorAccent">@color/colorAboutAccent</item>
    </style>

    <style name="DetailTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorDetailPrimary</item>
        <item name="colorPrimaryDark">@color/colorDetailPrimaryDark</item>
        <item name="colorAccent">@color/colorDetailAccent</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorAboutPrimary</item>
        <item name="colorPrimaryDark">@color/colorAboutPrimaryDark</item>
        <item name="colorAccent">@color/colorAboutAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAboutPrimary</item>
        <item name="android:textColorPrimary">@color/colorDetailAccent</item>
    </style>

</resources>
