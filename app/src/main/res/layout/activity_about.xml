<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center"
    android:background="@color/colorAboutBackground">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:text="Bu uygulama Doğan Kılıç ve öğrencileri tarafından geliştirilmiştir."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_weight="0.07"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_company"
                        android:background="@null"
                        android:id="@+id/companyLogo" />
                </LinearLayout>

                <TextView
                    android:text="YÖNETİCİ: DOĞAN KILIÇ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView2"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:fontFamily="sans-serif"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/textView35"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:layout_height="0dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="FİGEN KARAHAN"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView34"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="ÇETİN DEMİREL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView33"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="ÇAĞLA ERİŞ"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView32"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="SEMİH DİK"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView29"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="BURCU TOPÇU"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView30"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />


                <TextView
                    android:text="SEDRETTİN ÇALIŞKAN"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView27"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="NERGİS ŞİMŞEK"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView26"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="DOĞUKAN ARSLAN"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView25"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="KÜBRA ÖZSOY"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView24"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="İSMAİL GÜNGÖR"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView23"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="KÜBRA SEYHAN"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView22"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="YEŞİM EROL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView21"
                    android:gravity="center"
                    android:background="#e0e0e0"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

                <TextView
                    android:text="ŞEBNEM SALİHA ÇAKIROĞLU"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/textView20"
                    android:gravity="center"
                    android:background="#feca61"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:textColor="@color/colorAboutBackground" />

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>